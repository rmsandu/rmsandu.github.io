{% extends "base.jinja" %}

{% block main %}

<section class="hero is-medium"
    style="background-image: url('{{ url_for('static', filename=coverImg) }}'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="hero-body">
        <div class="container">
            <div class="block">
                <h1 class="title has-text-shadow has-text-white">{{ title }}</h1>
                <h2 class="subtitle has-text-shadow has-text-white">{{ subtitle }}</h2>
                <p class="has-text-shadow has-text-white">Posted on {{ date | format_date }}</p>
            </div>

            {% if tags %}
            <div class="tags">

                {% for tag in tags %}
                <a href="{{ url_for('search_tag', tag=tag) }}">
                    <span class="tag is-hoverable {{ 'is-primary' if selectedTag == tag else '' }}">{{ tag }}</span>
                </a>
                {% endfor %}
            </div>
            {% endif %}
        </div>

    </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="blog-post">
            </h2>
            <p class="date">

            </p>
            <div class="content">
                {{ content | safe }}
            </div>
        </div>

    </div>
</section>
{% endblock %}