<div class="fixed-grid has-1-cols-mobile has-2-cols-tablet has-2-cols-desktop">
    <div class="grid">
        {% for blogPost in blogPosts %}
        <div class="cell">
            <div class="card">
                <a href="{{ url_for('render_blog_page', page_name=blogPost.filename) }}">

                    <div class="card-content blog-card-header-height"
                        style="background-image: url('{{ url_for('static', filename=blogPost.coverImg) }}'); background-size: cover; background-position: center; background-repeat: no-repeat;">

                        <h2 class="title  is-4 as-text-shadow has-text-white">{{ blogPost.title | striptags }}</h2>
                        <h2 class="subtitle is-6 has-text-shadow has-text-white">{{ blogPost.subtitle | striptags }} {{
                            blogPost.date |format_date }}</h2>
                        <p class="has-text-shadow has-text-white">Posted on {{ blogPost.date | format_date }}</p>
                    </div>
                </a>
                <div class="card-content">
                    <div class="content">
                        <div class="block">
                            {{ blogPost.content | striptags | truncate(190, True, '...') }}
                            <a href="{{ url_for('render_blog_page', page_name=blogPost.filename) }}">Read More</a>
                        </div>

                        <div class="block blog-card-tag-height">
                            {% if blogPost.tags %}
                            <div class="tags">

                            {% for tag in blogPost.tags %}
                            <a href="{{ url_for('search_tag', tag=tag) }}">
                                <span class="tag is-hoverable {{ 'is-primary' if selectedTag == tag else '' }}">{{ tag }}</span>
                            </a>
                            {% endfor %}
                            </div>
                            {% endif %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>